<style type="text/css">
  .new_link a {display:block;width:100%;height:100%;}
  a:hover  {background-color:#FFff66;}
</style>

<%= javascript_include_tag "jquery.prettyPopin" %>
<h2><%= term %></h2>
<div>
  <div style="float:left;margin-left:20px;">
    <%= link_to "前月", { :controller => controller_name,
      :action => :index,
      :year => (@day << 1).year,
      :month => (@day << 1).month } %>
  </div>
  <div style="float:right;margin-right:20px;">
    <%= link_to "翌月", { :controller => controller_name,
      :action => :index,
      :year => (@day >> 1).year,
      :month => (@day >> 1).month } %> 
  </div>
</div>
<%=raw cost_calendar(@year, @month) %>

<script type="text/javascript" charset="utf-8">
  $(document).ready(function(){
    $("a[rel^='prettyPopin']").prettyPopin({
          height:false,
          width: 550,
          followScroll:true,
          callback: function(){  
            location.reload();
          }
    });
    $("td[rel^='prettyPopin']").prettyPopin({
          height:false,
          width: 550,
          followScroll:false,
          callback: function(){  
            location.reload();
          }
    });
  });
</script>

